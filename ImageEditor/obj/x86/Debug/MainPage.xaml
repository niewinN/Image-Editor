    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImageEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="ButtonSelectedStyle" TargetType="Button">
            <Setter Property="Background" Value="DarkGray"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Button x:ConnectionId='2' Content="Load"                         Margin="209,587,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:ConnectionId='3' Content="Save"                         Margin="372,587,0,0" VerticalAlignment="Top" Width="139"/>
        <Border HorizontalAlignment="Left" Margin="209,173,0,0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1">
            <Image x:ConnectionId='13' x:Name="imageControl" Stretch="Uniform" Height="389" Width="634" FocusVisualPrimaryBrush="{x:Null}"/>
        </Border>
        <Button x:ConnectionId='4' x:Name="grayscaleButton" Content="Grayscale"                                    Style="{StaticResource ButtonStyle}" Margin="872,173,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:ConnectionId='5' x:Name="invertColorsButton" Content="Invert Colors"                            Style="{StaticResource ButtonStyle}" Margin="1041,173,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:ConnectionId='6' x:Name="applySepiaToneButton" Content="Sepia"                              Style="{StaticResource ButtonStyle}" Margin="872,234,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:ConnectionId='7' x:Name="mirrorImageButton" Content="Mirror"                           Style="{StaticResource ButtonStyle}" Margin="1041,234,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:ConnectionId='8' x:Name="thresholdFilterButton" Content="Threshold"                               Style="{StaticResource ButtonStyle}" Margin="872,287,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:ConnectionId='9' x:Name="posterizeButton" Content="Posterize"                         Style="{StaticResource ButtonStyle}" Margin="1041,287,0,0" VerticalAlignment="Top" Width="139"/>
        <Slider x:ConnectionId='10' x:Name="contrastSlider" Minimum="-100" Maximum="100" Value="0" TickFrequency="10" SmallChange="1" LargeChange="10"                                            Header="Contrast" HorizontalAlignment="Left" Margin="872,353,0,0" VerticalAlignment="Top" Width="303" RenderTransformOrigin="0.06,0.093"/>
        <Slider x:ConnectionId='11' x:Name="brightnessSlider" Minimum="-100" Maximum="100" Value="0" TickFrequency="10" SmallChange="1" LargeChange="10"                                              Header="Brightness" HorizontalAlignment="Left" Margin="872,433,0,0" VerticalAlignment="Top" Width="303" RenderTransformOrigin="0.06,0.093"/>
        <Slider x:ConnectionId='12' x:Name="saturationSlider" Minimum="-50" Maximum="50" Value="0" TickFrequency="5" SmallChange="1" LargeChange="10"                                              Header="Saturation" HorizontalAlignment="Left" Margin="872,507,0,0" VerticalAlignment="Top" Width="303" RenderTransformOrigin="0.06,0.093"/>

